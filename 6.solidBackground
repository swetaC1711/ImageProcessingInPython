#SOLID BACKGROUND(WHITE OR BLACK BACKGROUND)

import numpy as np
import cv2

img = np.zeros((500,500,3))#it creates a white background of 500pixels in height and 500px in width and 3 is the channel number
cv2.imshow('BLACK BACKGROUND',img)
cv2.waitKey(1000)

img1 = np.ones((500,500,3))#it creates a white background of 500pixels in height and 500px in width and 3 is the channel number
cv2.imshow('WHITE BACKGROUND',img1)
cv2.waitKey(0)

cv2.destroyAllWindows()
